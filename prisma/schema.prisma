generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("VITE_DATABASE_URL")
}

model scene {
  id Int @id
  name String
  location String
  context String
  scene_roles scene_role[]
  studio_scenes studio_scene[]
}

model role {
  id Int @id
  name String
  scene_roles scene_role[]
}

model scene_role {
  line String
  scene_id Int
  scene scene @relation(fields: [scene_id], references: [id])
  role_id Int
  role role @relation(fields: [role_id], references: [id])

  @@id([scene_id, role_id, line])
}

model studio {
  id Int @id
  name String
  finished Boolean @default(false)
  start_scene Int @default(0)
  current_scene Int @default(0)
  studio_scenes studio_scene[]
}

model studio_scene {
  studio_id Int
  studio studio @relation(fields: [studio_id], references: [id])
  scene_id Int
  scene scene @relation(fields: [scene_id], references: [id])
  order_id Int @default(0)

  @@id([studio_id, scene_id])
}